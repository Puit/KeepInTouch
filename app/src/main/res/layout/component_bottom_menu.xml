<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/bottom_menu_image1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bottom_menu_image2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_baseline_thumb_up_24" />

        <ImageView
            android:id="@+id/bottom_menu_image2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bottom_menu_image3"
            app:layout_constraintStart_toEndOf="@+id/bottom_menu_image1"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_baseline_thumb_up_24" />

        <ImageView
            android:id="@+id/bottom_menu_image3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bottom_menu_image4"
            app:layout_constraintStart_toEndOf="@+id/bottom_menu_image2"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_baseline_thumb_up_24" />

        <ImageView
            android:id="@+id/bottom_menu_image4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bottom_menu_image3"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_baseline_thumb_up_24" />

        <View
            android:id="@+id/bottom_menu_div1"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/gray_light"
            app:layout_constraintBottom_toBottomOf="@+id/bottom_menu_image1"
            app:layout_constraintStart_toEndOf="@+id/bottom_menu_image1"
            app:layout_constraintTop_toTopOf="@+id/bottom_menu_image1" />

        <View
            android:id="@+id/bottom_menu_div2"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/gray_light"
            app:layout_constraintBottom_toBottomOf="@+id/bottom_menu_image2"
            app:layout_constraintStart_toEndOf="@+id/bottom_menu_image2"
            app:layout_constraintTop_toTopOf="@+id/bottom_menu_image2" />

        <View
            android:id="@+id/bottom_menu_div3"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/gray_light"
            app:layout_constraintBottom_toBottomOf="@+id/bottom_menu_image3"
            app:layout_constraintStart_toEndOf="@+id/bottom_menu_image3"
            app:layout_constraintTop_toTopOf="@+id/bottom_menu_image3" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
