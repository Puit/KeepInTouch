<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:id="@+id/recyclerView_conversation_card"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:elevation="1dp"
        app:cardBackgroundColor="@color/design_default_color_error"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/recyclerView_conversation_constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/recyclerView_conversation_image_rounder"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:elevation="12dp"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9"
                app:cardCornerRadius="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/recyclerView_conversation_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@color/white" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/recyclerView_conversation_name"
                style="@style/regular.white.24"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLength="280"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:maxLines="5"
                android:singleLine="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/recyclerView_conversation_image_rounder"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Josep Puit Rull Rull Rull RullJosep Puit Rull Rull Rull RullJosep Puit Rull Rull Rull RullJosep Puit Rull Rull Rull RullJosep Puit Rull Rull Rull RullJosep Puit Rull Rull Rull RullJosep Puit Rull Rull Rull RullJosep Puit Rull Rull Rull RullJosep Puit Rull Rull Rull RullJosep Puit Rull Rull Rull RullJosep Puit Rull Rull Rull Rull" />

            <ImageView
                android:id="@+id/recyclerView_conversation_star"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:elevation="2dp"
                android:src="@drawable/ic_star"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView_conversation_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>