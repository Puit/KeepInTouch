<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/recyclerView_conversation_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:elevation="2dp"
        app:cardCornerRadius="10dp"
        tools:cardBackgroundColor="@color/black">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/recyclerView_conversation_constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@color/white">

            <androidx.cardview.widget.CardView
                android:id="@+id/recyclerView_conversation_image_card"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:elevation="12dp"
                android:innerRadius="0dp"
                app:cardCornerRadius="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/recyclerView_conversation_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@color/white" />
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/recyclerView_conversation_more"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:elevation="10dp"
                android:src="@drawable/ic_baseline_more_vert_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/recyclerView_conversation_chat"
                style="@style/regular.black.15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLength="280"
                android:maxLines="5"
                android:singleLine="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView_conversation_image_card"
                tools:text="Josep Puit Rull Rull Rull RullJosep Puit Rull Rull Rull RullJosep Puit Rull Rull Rull RullJosep Puit Rull Rull Rull RullJosep Puit Rull Rull Rull RullJosep Puit Rull Rull Rull RullJosep Puit Rull Rull Rull RullJosep Puit Rull Rull Rull RullJosep Puit Rull Rull Rull RullJosep Puit Rull Rull Rull RullJosep Puit Rull Rull Rull Rull" />

            <View
                android:id="@+id/recyclerView_conversation_div1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView_conversation_chat" />

            <TextView
                android:id="@+id/recyclerView_conversation_time"
                style="@style/regular.black.15"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLength="280"
                android:maxLines="2"
                android:singleLine="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/recyclerView_conversation_div2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView_conversation_div1"
                tools:text="12:00 \n 12/08/01" />

            <View
                android:id="@+id/recyclerView_conversation_div2"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginVertical="10dp"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/recyclerView_conversation_place"
                app:layout_constraintStart_toEndOf="@+id/recyclerView_conversation_time"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView_conversation_chat" />

            <TextView
                android:id="@+id/recyclerView_conversation_place"
                style="@style/regular.black.20"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLength="280"
                android:maxLines="5"
                android:singleLine="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/recyclerView_conversation_div2"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView_conversation_div1"
                tools:text="El prat de llobregat" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>